<h1 class="mt-4">Dashboard Client</h1>
<p class="lead mb-3">Welcome <%=user.name %></p> 
<a href="/users/logout" class="btn btn-secondary">Logout</a>

<a href="/users/saves" class="btn btn-primary">Mes saves</a>
<a href="/users/annonces" class="btn btn-warning">Mes rendez-vous</a>
<a href="/users/annonces" class="btn btn-info">Mes messages</a>
<style type="text/css">
  #commentaire{
    margin-top: 20px;
  }
  #commentaire input{
    width: 30%;
  }
</style>
<br></br>
<input class=" mr-sm-2" type="text" placeholder="Categorie">
<input class=" mr-sm-2" type="text" placeholder="Sous-Categorie">
<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>


<% for (annonces of annonces) { %>
    <a href="/users/annonces/<%= annonces._id %>"><h1><%= annonces.Categorie %></h1></a>
    <h2>Sous - Categorie : <%= annonces.SousCategorie %></h2>
    <p>About : <%= annonces.about %></p>
    <a class="btn btn-primary" href="/users/save/<%=annonces._id %>" role="button"><i class="far fa-thumbs-up"></i></a>
    
    
    <a class="btn btn-secondary"><span class="bouton" id="bouton_texte" onclick="afficher_cacher()">Cacher les Commentaire</span></a>
    <hr>
    
    <style type="texte/css">
  .bouton
  {
      color:#0000ff;
      font-size:24px;
      cursor:pointer;
  }
  .bouton:hover
  {
      text-decoration:underline;
  }
  #texte
  {
      border:1px solid #333333;
      background:#eeeeee;
      padding:10px;
      color:#333333;
      display: block;
  }
 
</style> 

<div id ="texte">
     <% for(n in annonces.comments) {%>
        
        <p >
          <%= annonces.comments[n] %>
          ftg
        </p>
       
      <% } %>
</div>

  
     <hr> 
   
     <script type="text/javascript">
    function afficher_cacher()
    {
      if(document.getElementById('texte').style.display=="none")
      {
        document.getElementById('texte').style.display="block";
        document.getElementById('bouton_texte').innerHTML='Cacher les commentaires';
      }
      else
      {
        document.getElementById('texte').style.display="none";
        document.getElementById('bouton_texte').innerHTML='Afficher Commentaire';
      }
    }
    </script>
 <% } %>

  